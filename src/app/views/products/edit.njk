{% extends "layout.njk" %}



{% block content %}
  <section class="container form">
    <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">


      <div class="header">
        <h3>Editar produto: {{ product.nome }}</h3>
      </div>

      <div class="fields">
        {% include 'products/fields.njk' %}
      </div>

      <input type="hidden" name="id" value="{{ product.id }}">
      
      <button class="button edit" type="submit">Atualizar</button>
    </form>

    <form action="/products?_method=DELETE" method="POST">
      <input type="hidden" name="id" value="{{ product.id }}">
      <button 
        class="button delete" 
        onclick="return window.confirm('Deseja mesmo deletar este item?')"
      >
        Deletar
      </button>
    </form>

  </section>



{% endblock content %}
    